{
  "name": "dapp-project-template",
  "version": "1.0.0",
  "description": "A project template for your smart contract.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MatthieuScarset/dapp-project-template.git"
  },
  "author": {
    "name": "Matthieu SCARSET",
    "email": "m@matthieuscarset.com",
    "url": "https://matthieuscarset.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MatthieuScarset/dapp-project-template/issues"
  },
  "homepage": "https://github.com/MatthieuScarset/dapp-project-template#readme",
  "dependencies": {},
  "devDependencies": {
    "@openzeppelin/contracts": "^4.5.0"
  },
  "scripts": {
    "start": "yarn server && yarn backend:migrate && yarn watch",
    "stop": "pkill node && pkill webpack",
    "watch": "yarn run frontend:watch",
    "build": "yarn run backend:build && yarn run frontend:build",
    "server": "yarn backend:server & yarn frontend:server",
    "backend:server": "ganache -p 7545 > /dev/null &",
    "backend:migrate": "truffle migrate --reset",
    "backend:build": "truffle compile",
    "backend:test": "truffle test",
    "frontend:server": "npx webpack serve > /dev/null &",
    "frontend:build": "tailwindcss -i css/main.css -o build/main.css && webpack --config webpack.config.js",
    "frontend:watch": "tailwindcss -i css/main.css -o build/main.css --watch & webpack --config webpack.config.js --watch",
    "example:script": "npx truffle exec --network development scripts/example.js"
  }
}
